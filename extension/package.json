{
  "name": "fluxgrid-extension",
  "displayName": "FluxGrid DB Client",
  "description": "Cursor/VS Code互換のDBクライアント拡張。Core Engineと連携して高速なクエリ実行を実現します。",
  "version": "0.0.1",
  "publisher": "fluxgrid",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:fluxgrid.openPanel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fluxgrid.openPanel",
        "title": "FluxGrid: 接続パネルを開く"
      },
      {
        "command": "fluxgrid.executeQuery",
        "title": "FluxGrid: クエリを実行"
      },
      {
        "command": "fluxgrid.cancelQuery",
        "title": "FluxGrid: 実行中のクエリをキャンセル"
      }
    ]
  },
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "build": "tsc -p .",
    "watch": "tsc -w -p .",
    "package": "vsce package",
    "dev": "npm-run-all --parallel watch:webview watch",
    "watch:webview": "vite build --watch --mode development"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.10",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.0",
    "vsce": "^3.0.0"
  }
}

